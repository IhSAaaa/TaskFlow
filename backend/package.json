{
  "name": "@taskflow/backend",
  "version": "1.0.0",
  "description": "TaskFlow Backend Microservices",
  "scripts": {
    "dev:all": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:task\" \"npm run dev:project\" \"npm run dev:notification\" \"npm run dev:tenant\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:auth": "cd auth-service && npm run dev",
    "dev:user": "cd user-service && npm run dev",
    "dev:task": "cd task-service && npm run dev",
    "dev:project": "cd project-service && npm run dev",
    "dev:notification": "cd notification-service && npm run dev",
    "dev:tenant": "cd tenant-service && npm run dev",
    "build:all": "npm run build:shared && npm run build:gateway && npm run build:auth && npm run build:user && npm run build:task && npm run build:project && npm run build:notification && npm run build:tenant",
    "build:shared": "cd shared && npm run build",
    "build:gateway": "cd api-gateway && npm run build",
    "build:auth": "cd auth-service && npm run build",
    "build:user": "cd user-service && npm run build",
    "build:task": "cd task-service && npm run build",
    "build:project": "cd project-service && npm run build",
    "build:notification": "cd notification-service && npm run build",
    "build:tenant": "cd tenant-service && npm run build",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:user\" \"npm run start:task\" \"npm run start:project\" \"npm run start:notification\" \"npm run start:tenant\"",
    "start:gateway": "cd api-gateway && npm start",
    "start:auth": "cd auth-service && npm start",
    "start:user": "cd user-service && npm start",
    "start:task": "cd task-service && npm start",
    "start:project": "cd project-service && npm start",
    "start:notification": "cd notification-service && npm start",
    "start:tenant": "cd tenant-service && npm start",
    "install:all": "npm run install:shared && npm run install:gateway && npm run install:auth && npm run install:user && npm run install:task && npm run install:project && npm run install:notification && npm run install:tenant",
    "install:shared": "cd shared && npm install",
    "install:gateway": "cd api-gateway && npm install",
    "install:auth": "cd auth-service && npm install",
    "install:user": "cd user-service && npm install",
    "install:task": "cd task-service && npm install",
    "install:project": "cd project-service && npm install",
    "install:notification": "cd notification-service && npm install",
    "install:tenant": "cd tenant-service && npm install",
    "test:all": "npm run test:gateway && npm run test:auth && npm run test:user && npm run test:task && npm run test:project && npm run test:notification && npm run test:tenant",
    "test:gateway": "cd api-gateway && npm test",
    "test:auth": "cd auth-service && npm test",
    "test:user": "cd user-service && npm test",
    "test:task": "cd task-service && npm test",
    "test:project": "cd project-service && npm test",
    "test:notification": "cd notification-service && npm test",
    "test:tenant": "cd tenant-service && npm test",
    "clean": "npm run clean:gateway && npm run clean:auth && npm run clean:user && npm run clean:task && npm run clean:project && npm run clean:notification && npm run clean:tenant",
    "clean:gateway": "cd api-gateway && rm -rf dist node_modules",
    "clean:auth": "cd auth-service && rm -rf dist node_modules",
    "clean:user": "cd user-service && rm -rf dist node_modules",
    "clean:task": "cd task-service && rm -rf dist node_modules",
    "clean:project": "cd project-service && rm -rf dist node_modules",
    "clean:notification": "cd notification-service && rm -rf dist node_modules",
    "clean:tenant": "cd tenant-service && rm -rf dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "shared",
    "api-gateway",
    "auth-service",
    "user-service",
    "task-service",
    "project-service",
    "notification-service",
    "tenant-service"
  ]
} 